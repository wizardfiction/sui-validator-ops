    "@mysten/sui.js": "0.0.0-experimental-20230411005557",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}